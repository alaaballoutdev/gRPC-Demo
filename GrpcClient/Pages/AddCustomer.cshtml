@page
@model GrpcClient.Pages.AddCustomerModel
@{
}

<div class="text-center w-50 m-auto">
    <h2 class="mb-5">Add Customer</h2>
    <form method="post">
        <div class="form-group mb-4">
           <input class="form-control" asp-for="Input.CustomerName" placeholder="Customer Name"/>
           <span class="text-danger"asp-validation-for="Input.CustomerName"></span>
        </div>
        <div class="form-group mb-4">
           <input class="form-control" asp-for="Input.CustomerEmail" placeholder="Email"/>
           <span class="text-danger"asp-validation-for="Input.CustomerEmail"></span>
        </div>
        <div class="form-group mb-4">
           <input class="form-control" asp-for="Input.CustomerAge" placeholder="Age" />
           <span class="text-danger"asp-validation-for="Input.CustomerAge"></span>
        </div>
        <button type="submit" class="btn btn-info text-white">Submit</button>
    </form>


</div>