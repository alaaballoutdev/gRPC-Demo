@page "{Id}"
@model GrpcClient.Pages.EditSaleModel
@{
}
<div class="text-center w-50 m-auto">
    <h2 class="mb-5">Edit Sale</h2>
    <form method="post">
        <div class="form-group mb-4">
            <input class="form-control" asp-for="Input.CustomerId" placeholder="Customer Id" readonly />
            <span class="text-danger" asp-validation-for="Input.CustomerId"></span>
        </div>

        <div class="form-group mb-4">
            <input class="form-control" asp-for="Input.Item" placeholder="Item" />
            <span class="text-danger" asp-validation-for="Input.Item"></span>
        </div>
        <div class="form-group mb-4">
            <input class="form-control" asp-for="Input.Price" placeholder="Price" />
            <span class="text-danger" asp-validation-for="Input.Price"></span>
        </div>
        <div class="form-group mb-4">
            <input type="datetime-local" class="form-control" asp-for="Input.SaleDate" placeholder="Date" />
            <span class="text-danger" asp-validation-for="Input.SaleDate"></span>
        </div>
        <button type="submit" class="btn btn-info text-white">Submit</button>
    </form>


</div>