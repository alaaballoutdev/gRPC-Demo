@page "{Id}"
@model GrpcClient.Pages.DeleteCustomerModel
@{
}

    <div class="text-center w-50 m-auto">
        <h2 class="mb-5">Delete Customer</h2>
        <form method="post">
            <div class="form-group mb-4">
                <input class="form-control" asp-for="Input.CustomerName" placeholder="Customer Name" disabled />
                <span class="text-danger" asp-validation-for="Input.CustomerName" disabled></span>
            </div>
            <div class="form-group mb-4">
                <input class="form-control" asp-for="Input.CustomerEmail" placeholder="Email" disabled />
                <span class="text-danger" asp-validation-for="Input.CustomerEmail"></span>
            </div>
            <div class="form-group mb-4">
                <input class="form-control" asp-for="Input.CustomerAge" placeholder="Age" disabled/>
                <span class="text-danger" asp-validation-for="Input.CustomerAge"></span>
            </div>
            <button type="submit" class="btn btn-danger text-white m-2">Delete</button>
            <a href="/" class="btn btn-info text-white m-2">Cancel</a>
        </form>


    </div>

